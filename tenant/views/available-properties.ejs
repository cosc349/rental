<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Properties</title>
    <link rel="stylesheet" href="/css/available-properties.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Available Properties</h1>
            <a href="/dashboard" class="back-btn">Back to Dashboard</a>
        </header>
        <main>
            <div class="property-grid">
                <% if (properties.length > 0) { %>
                    <% properties.forEach(property => { %>
                        <div class="property-card">
                            <div class="property-details">
                                <h3><%= property.property_address %></h3>
                                <p class="price">$<%= property.rental_price %>/month</p>
                                <div class="property-info">
                                    <p>Bedrooms: <%= property.bedrooms %></p>
                                    <p>Bathrooms: <%= property.bathrooms %></p>
                                    <p>Current Tenants: <%= property.tenant_count %></p>
                                    <p class="available-spots">
                                        Available Spots: <%= property.bedrooms - property.tenant_count %>
                                    </p>
                                </div>
                                    <form action="/rent-property" method="POST">
                                        <input type="hidden" name="property_id" value="<%= property.property_id %>">
                                        <button type="submit" class="rent-btn">Rent This Property</button>
                                    </form>
                                </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="no-properties">No properties are available for rent at the moment.</p>
                <% } %>
            </div>
        </main>
    </div>
</body>
</html>